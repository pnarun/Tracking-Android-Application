<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/regDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="133dp"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="97dp"
        android:fontFamily="@font/audiowide"
        android:text="Register"
        android:textColor="@color/skyblue"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="43dp"
        android:layout_height="45dp"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="85dp"
        android:layout_marginRight="85dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/regDisplay"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/note" />

    <EditText
        android:id="@+id/nameText"
        android:layout_width="304dp"
        android:layout_height="51dp"
        android:layout_marginStart="57dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:width="300dp"
        android:height="50dp"
        android:background="@drawable/inputfield"
        android:drawableStart="@drawable/ic_account_circle_black_24dp"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:ems="10"
        android:fontFamily="@font/audiowide"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regDisplay" />

    <EditText
        android:id="@+id/mailText"
        android:layout_width="306dp"
        android:layout_height="52dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="50dp"
        android:width="300dp"
        android:height="50dp"
        android:drawableStart="@drawable/ic_email_black_24dp"
        android:background="@drawable/inputfield"
        android:textColorHint="@android:color/darker_gray"
        android:ems="10"
        android:fontFamily="@font/audiowide"
        android:hint="Email ID"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameText"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="50dp"
        android:drawableLeft="@drawable/ic_email_black_24dp" />

    <EditText
        android:id="@+id/pwdText"
        android:layout_width="306dp"
        android:layout_height="50dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="48dp"
        android:width="300dp"
        android:height="50dp"
        android:drawableStart="@drawable/ic_vpn_key_black_24dp"
        android:background="@drawable/inputfield"
        android:textColorHint="@android:color/darker_gray"
        android:ems="10"
        android:fontFamily="@font/audiowide"
        android:hint="password"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mailText"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="48dp"
        android:drawableLeft="@drawable/ic_vpn_key_black_24dp" />

    <EditText
        android:id="@+id/contactText"
        android:layout_width="308dp"
        android:layout_height="50dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="46dp"
        android:drawableStart="@drawable/ic_phone_black_24dp"
        android:width="300dp"
        android:height="50dp"
        android:background="@drawable/inputfield"
        android:textColorHint="@android:color/darker_gray"
        android:ems="10"
        android:fontFamily="@font/audiowide"
        android:hint="contact "
        android:inputType="phone"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwdText"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="46dp"
        android:drawableLeft="@drawable/ic_phone_black_24dp" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="128dp"
        android:width="155dp"
        android:height="58dp"
        android:background="@drawable/button"
        android:fontFamily="@font/audiowide"
        android:text="Submit"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contactText" />

    <ProgressBar
        android:id="@+id/regProgBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="181dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="182dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submitButton"
        tools:visibility="invisible"
        android:layout_marginLeft="181dp"
        android:layout_marginRight="182dp" />

</androidx.constraintlayout.widget.ConstraintLayout>